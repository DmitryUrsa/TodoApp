// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider          = "postgresql"
  url               = env("DATABASE_URL")
  shadowDatabaseUrl = env("SHADOW_DATABASE_URL")
}

model User {
  id          Int    @id @default(autoincrement())
  first_name  String
  second_name String
  login       String
  password    String
  role        String
}

model Task {
  id            Int    @id @default(autoincrement())
  title         String
  description   String
  start_date    String
  end_date      String
  last_updated  String
  priority      String
  status        String
  author        Int
  assigned_user Int
}
